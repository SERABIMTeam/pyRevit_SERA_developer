<Window 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Hello World" 
    Width="300" ResizeMode="NoResize" SizeToContent="Height" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <Label Content="Enter your name inside the box below:"/>
        <TextBox x:Name="textbox" Height="44" FontSize="18" FontWeight="Heavy" VerticalContentAlignment="Center" Padding="5"/>
        <Button Content="Say Hello" Height="44" Margin="0,10,0,0" Click="say_hello" />
    </StackPanel>
</Window>